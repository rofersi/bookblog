<%= form_with model: article do |form| %>
  <div>
    <%= form.label "Título" %><br>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label "Autor" %><br>
    <%= form.text_area :author %><br>
    <% article.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label "Nota" %><br>
    <%= form.text_area :book_grade %><br>
    <% article.errors.full_messages_for(:book_grade).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label "Descrição" %><br>
    <%= form.text_area :description %><br>
    <% article.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>